<!-- /books/view/:id -->

<div class='row m-b-3 m-t-3'>
  <div class="col-xs-4 test">
    <img class="img-fluid" src="{{book.cover_url}}" alt="Pic" />
  </div>
  <div class="col-xs-6">
    <h3>
      {{book.title}}
    </h3>
    <p>
      {{#each authors}}
        {{#if @last}}
          <a href="/authors/view/{{this.authorID}}">
            {{this.firstname}} {{this.lastname}}
          </a>
        {{else}}
          <a href="/authors/view/{{this.authorID}}">
            {{this.firstname}} {{this.lastname}}
          </a> |
        {{/if}}
      {{/each}}
    </p>
    <p>Genre: <span>{{book.genre}}</span></p>
    <p>Description: <span>{{book.description}}</span></p>
    <a class="btn btn-primary btn-sm" href="/books/edit/{{book.id}}">Edit</a>
    <a class="btn btn-danger btn-sm" href="/books/delete/{{book.id}}">Delete</a>
  </div>
</div>
