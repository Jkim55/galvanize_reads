<!-- /books/add -->

<form class="display-book" action="/books/add" method="post">
  <fieldset>
  <div class="title">
    <label for="book-title">Title</label>
    <input type="text" class="form-control" name='title' placeholder="Title" id="book-title" required>
  </div>

<div class="form-group" enctype="multipart/form-data">
  <div class="addedAuthors">
    <label for="selectedAuths">Author(s) Added</label>
    <select multiple name="selectedAuths" class="form-control" id="selectedAuths">
      <!-- WHERE SELECTED AUTHORS WILL GO -->
    </select>
  </div>
</div>

  <div class="authorSelector">
    <label for="choiceOfAuths">Author(s):</label>
    <select multiple name="choiceOfAuths" class="form-control" id="choiceOfAuths">
      {{#each authors}}
      <option id="{{this.authorID}}">
        {{this.firstname}} {{this.lastname}}
      </option>
      {{/each}}
    </select>
  </div>

  <div class="genre">
    <label for="book-genre">Genre</label>
    <input type="text" class="form-control" name='genre' placeholder="Genre" id="book-genre"required>
  </div>

  <div class="cover_url">
    <label for="book-cover_url">Cover Image URL</label>
    <input type="text" class="form-control" name='cover_url' placeholder="Cover URL" required>
  </div>

  <div class="description">
    <label for="book-description">Description</label>
    <input type="text" class="form-control" name='description' placeholder="Description" required>
  </div>
  <br>
  <div>
    <input class="btn btn-info longbtn" type="submit" value="Add Book">
  </div>
</fieldset>
</form>
