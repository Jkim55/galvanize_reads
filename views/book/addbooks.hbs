<!-- /books/add -->

<form class="add-book m-t-3" action="/books/add" method="post">
  <div class="title">
    <label for="book-title">Title</label>
    <input type="text" class="form-control" name='title' placeholder="Title" required>
  </div>
  <!-- <div class="author">
    <label for="book-author">Author</label>
    <input type="text" class="form-control" name='author' placeholder="Author">
  </div> -->

  <div class="author">
    <!-- <label for="book-author">Author</label>
    <input type="text" class="form-control" name='author' placeholder="Author"> -->

    <!-- Use select HTML Tag instead (http://www.w3schools.com/tags/tag_select.asp) -->
    <div class="">
      <label for="book-author">Author(s) Added</label>
      Show Authors selected...
    </div>
    <label for="book-author">Authors</label>
    <div class="dropdown">
      <button class="btn btn-secondary form-control text-xs-left"
      type="button" id="dropdownMenu1" data-toggle="dropdown"
      aria-haspopup="true" aria-expanded="false">
      Select Authors
      </button>
      <div class="dropdown-menu form-control" aria-labelledby="dropdownMenu1" id='authors'>
        {{#each authors}}
        <a class="dropdown-item" href="#">{{this.first_name}} {{this.last_name}}</a>
        {{/each}}
      </div>
    </div>
  </div>

  <div class="genre">
    <label for="book-genre">Genre</label>
    <input type="text" class="form-control" name='genre' placeholder="Genre" required>
  </div>

  <div class="cover_url">
    <label for="book-cover_url">Cover Image URL</label>
    <input type="text" class="form-control" name='cover_url' placeholder="Cover URL" required>
  </div>

  <div class="description">
    <label for="book-description">Description</label>
    <input type="text" class="form-control" name='description' placeholder="Description" required>
  </div>
  <br>
  <div>
    <input class="btn btn-info longbtn" type="submit" value="Add Book">
  </div>
</form>
