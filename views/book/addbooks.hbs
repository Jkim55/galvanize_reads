<form class="add-book m-t-3" action="/books/add" method="post">
  <div class="title">
    <label for="book-title">Title</label>
    <input type="text" class="form-control" name='title' placeholder="Title">
  </div>
  <!-- <div class="author">
    <label for="book-author">Author</label>
