<div class='display-all-book'>
    {{#each book}}

    <div class='row m-b-3 m-t-3'>

      <div class="col-xs-4 test">
        <img class="img-fluid" src="{{this.cover_url}}" alt="" />
      </div>

      <div class="col-xs-6">
        <h3>{{this.title}}</h3>
        <p>
          {{#each authorlist}}
          {{#if @last}}
          {{firstname}} {{lastname}}
          {{else}}
          {{firstname}} {{lastname}} |
          {{/if}}
          {{/each}}
        </p>
        <p>ID: {{this.id}}</p>
        <p>Genre: <span>{{this.genre}}</span></p>
        <p>Description: <span>{{this.description}}</span></p>



        <a href="/books/edit/{{this.id}}"><button type="button" class="btn btn-primary btn-sm" name="edit">edit</button></a>

        <a class="btn btn-danger btn-sm" href="/books/delete/{{this.id}}">Delete</a>

      </div>
    </div>
    {{/each}}
</div>
