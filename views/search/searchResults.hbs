<div class='display-all-book'>
  {{#each book}}
  <div class='row m-b-3 m-t-3'>
    <div class="col-xs-4 test">
      <img class="img-fluid" src="{{this.cover_url}}" alt="" />
    </div>
    <div class="col-xs-6">
      <h3>
        <a href="/books/view/{{this.id}}">
          {{this.title}}
        </a>
      </h3>
      <p>
        {{#each authorlist}}
          {{#if @last}}
            <a href="/authors/view/{{this.authorID}}">{{this.firstname}} {{this.lastname}}</a>
          {{else}}
            <a href="/authors/view/{{this.authorID}}">{{this.firstname}} {{this.lastname}}</a> |
          {{/if}}
        {{/each}}
      </p>
      <p>Genre: <span>{{this.genre}}</span></p>
      <p>Description: <span>{{this.description}}</span></p>
      <a class="btn btn-primary btn-sm" href="/books/view/{{this.id}}">View Book Details</a>
    </div>
  </div>
  {{/each}}
  <a class="btn btn-secondary btn-lg" href="/books/add">Add A Book</a>
</div>

<nav aria-label="Page navigation">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
        <span class="sr-only">Previous</span>
      </a>
    </li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
        <span class="sr-only">Next</span>
      </a>
    </li>
  </ul>
</nav>
